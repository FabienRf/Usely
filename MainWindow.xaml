<Window x:Class="Usely.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Usely"
        Height="350"
        Width="525">
        <Grid>
                <StackPanel Margin="20">
                        <!-- Generate one button per hotkey from DataContext.Hotkeys -->
                        <ItemsControl ItemsSource="{Binding Hotkeys}">
                                <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                                <Button Height="40"
                                                                Margin="5">
                                                        <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>

                                                                <!-- Left: action name (e.g. "PutItOnTop") -->
                                                                <TextBlock Text="{Binding ActionName}"
                                                                           VerticalAlignment="Center"/>

                                                                <!-- Right: shortcut text (e.g. "Ctrl+Shift+Up") -->
                                                                <TextBlock Grid.Column="1"
                                                                           Text="{Binding KeyLib}"
                                                                           VerticalAlignment="Center"
                                                                           HorizontalAlignment="Right"
                                                                           Margin="10,0,0,0"/>
                                                        </Grid>
                                                </Button>
                                        </DataTemplate>
                                </ItemsControl.ItemTemplate>
                        </ItemsControl>
                </StackPanel>
        </Grid>
</Window>
